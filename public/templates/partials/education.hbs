{{#if education.length}}
<div class="container education-container">

    {{> title value="Education"}} {{#each education}}

    <section class="item">

        {{> section-header name=this.institution }} 

        <h4>{{#if degree}}{{degree}} {{/if}}{{#if area}}{{area}}{{/if}}</h4>

        {{#if score}}
        <h5>{{score}}</h5>
        {{/if}} {{#if specialization}}
        <h5 class="specialization">{{specialization}}</h5>
        {{/if}} {{#if courses.length}}
        <ul class="two-column">
            {{#each courses}}
            {{#if li}}
            <li>{{.}}</li>
            {{/if}}
            {{/each}}
        </ul>
        {{/if}}
    </section>

    {{/each}}
</div>
{{/if}}
